{
  "manifest_version": 2,
  "name": "QuickSearch",
  "short_name": "QuickSearch",
  "version": "0.0.2",
  "description": "Highlight any text on the page, and Cmd+Click to search the selected text in a new tab.",
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png"
  },
  "browser_action": {
    "default_icon": "icons/icon64.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
